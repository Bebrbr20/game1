        <ProgressBar x:Name="progress" HorizontalAlignment="Center" Height="21" VerticalAlignment="Top" Width="800"/>
        <Label x:Name="zivoty" Content="Label" HorizontalAlignment="Left" Height="27" Margin="676,26,0,0" VerticalAlignment="Top" Width="92"/>
        <Label x:Name="score" Content="Label" HorizontalAlignment="Left" Height="27" Margin="36,26,0,0" VerticalAlignment="Top" Width="92"/>

    </Grid>
</Window>
