        xmlns:local="clr-namespace:game1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="leftButton" Content="Button" HorizontalAlignment="Left" Height="56" Margin="10,368,0,0" VerticalAlignment="Top" Width="390" Click="tlacitko"/>
